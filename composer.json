{
    "name": "meriksk/php-image",
    "description": "PHP class to re-size and scale images",
    "keywords": ["image", "gd", "imagick", "resize", "thumbnail", "scale"],
	"type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marek Drugac",
            "email": "drugacm@gmail.com",
            "role": "Creator"
        }
    ],
	"require": {
		"php": ">=5.6.0"
	},
    "require-dev": {
        "codeception/codeception": "^4.1",
        "codeception/module-asserts": "^1.3",
        "codeception/module-phpbrowser": "^1.0"
    },
	"suggest": {
		"ext-gd": "to use GD library based image processing.",
		"ext-imagick": "to use Imagick based image processing."
	},
    "autoload": {
        "psr-4": {
            "meriksk\\PhpImage\\": "src",
			"tests\\": "tests"
        }
    },
    "scripts": {
        "test": "php vendor/bin/codecept"
    },
    "minimum-stability": "stable"
}
