{
    "name": "meriksk/php-image",
    "description": "PHP class to re-size and scale images",
    "keywords": ["image", "gd", "imagick", "resize", "thumbnail", "scale"],
	"type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marek Drugac",
            "email": "marek.drugac@gmail.com",
            "role": "Creator"
        }
    ],
	"require": {
		"php": ">=5.6.0"
	},
    "require-dev": {
        "phpunit/phpunit": "*" 
   },
	"suggest": {
		"ext-gd": "to use GD library based image processing.",
		"ext-imagick": "to use Imagick based image processing."
	},
    "autoload": {
        "psr-4": {
            "meriksk\\PhpImage\\": "src/meriksk/PhpImage"
        }
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml"
    },
    "minimum-stability": "stable"
}
